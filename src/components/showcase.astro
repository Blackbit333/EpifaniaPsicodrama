---
import { getCollection } from "astro:content";
import ContentSection from "~/components/content-section.astro";
import ShowcaseCard from "~/components/showcase-card.astro";
import PsicodramaSection from '~/components/PsicodramaSection.astro';
import TestimonialSection from "~/components/TestimonialSection.astro";// Cambia por la ruta correcta de tu imagen.
import TestimonialSection2 from "~/components/TestimonialSection2.astro";// Cambia por la ruta correcta de tu imagen.
import TeamSection from "../components/TeamSection.astro";

const teamData = [
  {
    name: "Lic. Efi Bezi",
    title: "Psicóloga, artista",
    description: "Especialista en Psicodrama y Arteterapia.",
    country: "Argentina",
    image: "/images/efi.jpg",
    social: [
       { icon: "/publics/icons/facebook.svg", link: "https://facebook.com/efi" },
      { icon: "/publics/icons/linkedin.svg", link: "https://linkedin.com/in/efi" },
      { icon: "/publics/icons/instagram.svg", link: "https://instagram.com/efi" }
    ]
  },
  {
    name: "Dra. Nelly López Azuz",
    title: "Psicóloga, antropóloga",
    description: "Experta en Sociodrama, Psicodrama e Inteligencia Espiritual.",
    country: "México",
    image: "/images/nelly.jpg",
    social: [
      { icon: "/icons/facebook.svg", link: "https://facebook.com/nelly" },
      { icon: "/icons/linkedin.svg", link: "https://linkedin.com/in/nelly" },
      { icon: "/icons/instagram.svg", link: "https://instagram.com/nelly" }
    ]
  }
];

const featuredSites = await getCollection(
  "showcase",
  ({ data }) => "featured" in data,
);
const orderedSites = featuredSites.sort(
  (a, b) => a.data.featured! - b.data.featured!,
);
---
<TeamSection team={teamData} />
<PsicodramaSection />
<TestimonialSection />
<TestimonialSection2 />
<ContentSection title="Videos" id="showcase">
  <Fragment slot="lead">
    Hablamos sobre <span class="text-primary">psicodrama</span>{" "}
    <span class="text-primary"></span> e inteligencial{" "}
    <span class="text-primary">espiritual</span>.
  </Fragment>
  <div class="max-w-6xl space-y-2">
    <div class="grid grid-cols-1 gap-4 md:grid-cols-2 lg:grid-cols-3">
      {orderedSites.map((site) => <ShowcaseCard site={site} />)}
    </div>
    <p class="text-right text-sm">
      <a class="text-primary" href="https://www.youtube.com/@epifaniapsicodrama/videos/">
        ...y más &rarr;
      </a>
    </p>
  </div>
</ContentSection>
