---
import { faFacebook, faLinkedin, faInstagram } from '@fortawesome/free-brands-svg-icons';
import { FontAwesomeIcon } from '@fortawesome/react-fontawesome';

const teamMembers = [
  {
    name: "Lic. Efi Bezi",
    description: "Psic√≥loga, artista.",
    country: "Argentina",
    image: '/workshop-image.png',
    socials: [
      { platform: "facebook", link: "https://facebook.com", icon: faFacebook },
      { platform: "linkedin", link: "https://linkedin.com", icon: faLinkedin },
      { platform: "instagram", link: "https://instagram.com", icon: faInstagram },
    ],
  },
];
---
<section class="py-12">
  <div class="container mx-auto px-4">
    <div class="grid gap-8 sm:grid-cols-2">
      {teamMembers.map((member) => (
        <div class="overflow-hidden rounded-lg shadow-lg">
          <img
            src={member.image}
            alt={`Foto de ${member.name}`}
            class="w-full h-64 object-cover"
          />
          <div class="p-6 text-center">
            <h3 class="text-xl font-bold mb-2">{member.name}</h3>
            <p>{member.description}</p>
            <p class="mt-2 font-semibold">({member.country})</p>
            <div class="mt-4 flex justify-center gap-4">
              {member.socials.map((social) => (
                <a
                  href={social.link}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="hover:underline"
                >
                  <FontAwesomeIcon icon={social.icon} class="text-lg" />
                </a>
              ))}
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

