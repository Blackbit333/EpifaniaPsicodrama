---
import { Image } from "astro:assets";
import EfiImage from '~/assets/Efi3.jpeg';  // Asegúrate de usar la ruta correcta de tu imagen
import NellyImage from '~/assets/Nelly.jpeg';  // Asegúrate de usar la ruta correcta de tu imagen
---

<section class="astro-team">
  <div class="astro-member">
    <div class="astro-photo">
      <Image src={EfiImage} alt="Integrante 1" class="astro-photo-img" />
    </div>
    <div class="astro-info">
      <h3>Nombre Integrante 1</h3>
      <p>Descripción breve del integrante 1.</p>
      <div class="astro-socials">
        <a href="https://www.instagram.com/" target="_blank" class="astro-social-link">Instagram</a>
        <a href="https://www.facebook.com/" target="_blank" class="astro-social-link">Facebook</a>
        <a href="https://www.linkedin.com/" target="_blank" class="astro-social-link">LinkedIn</a>
      </div>
    </div>
  </div>

  <div class="astro-member">
    <div class="astro-photo">
      <Image src={NellyImage} alt="Integrante 2" class="astro-photo-img" />
    </div>
    <div class="astro-info">
      <h3>Nombre Integrante 2</h3>
      <p>Descripción breve del integrante 2.</p>
      <div class="astro-socials">
        <a href="https://www.instagram.com/ejemplo2" target="_blank" class="astro-social-link">Instagram</a>
        <a href="https://www.facebook.com/ejemplo2" target="_blank" class="astro-social-link">Facebook</a>
        <a href="https://www.linkedin.com/in/ejemplo2" target="_blank" class="astro-social-link">LinkedIn</a>
      </div>
    </div>
  </div>
</section>

<style>
  .astro-team {
    display: flex;
    justify-content: space-around;
    gap: 20px;
    text-align: center;
  }

  .astro-member {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 40%;
  }

  .astro-photo {
    margin-bottom: 15px;
  }

  .astro-photo-img {
    border-radius: 50%;
    width: 150px;
    height: 150px;
    object-fit: cover;
  }

  .astro-info {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .astro-socials {
    display: flex;
    justify-content: center;
    gap: 10px;
    margin-top: 10px;
  }

  .astro-social-link {
    text-decoration: none;
    color: #333;
    font-size: 14px;
    transition: color 0.3s;
  }

  .astro-social-link:hover {
    color: #0073e6;
  }
</style>

