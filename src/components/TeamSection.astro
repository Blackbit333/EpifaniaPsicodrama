---
import { Image } from "astro:assets";
import EfiImage from "~/assets/Efi3.jpeg"; // Ruta de la imagen de Efi
import NellyImage from "~/assets/Nelly.jpeg"; // Ruta de la imagen de Nelly

<section class="astro-team">
  <div class="astro-member">
    <div class="astro-photo">
      <Image 
        src={EfiImage} 
        alt="Integrante 1" 
        class="astro-photo-img w-24 h-24 rounded-full mx-auto mb-4 border-4 border-white"
      />
    </div>
    <div class="astro-info">
      <h3>Nombre Integrante 1</h3>
      <p>Descripción breve del integrante 1.</p>
      <div class="astro-socials">
        <a href="https://www.instagram.com/" target="_blank" class="astro-social-link">Instagram</a>
        <a href="https://www.facebook.com/" target="_blank" class="astro-social-link">Facebook</a>
        <a href="https://www.linkedin.com/" target="_blank" class="astro-social-link">LinkedIn</a>
      </div>
    </div>
  </div>

  <div class="astro-member">
    <div class="astro-photo">
      <Image 
        src={NellyImage} 
        alt="Integrante 2" 
        class="astro-photo-img w-24 h-24 rounded-full mx-auto mb-4 border-4 border-white"
      />
    </div>
    <div class="astro-info">
      <h3>Nombre Integrante 2</h3>
      <p>Descripción breve del integrante 2.</p>
      <div class="astro-socials">
        <a href="https://www.instagram.com/ejemplo2" target="_blank" class="astro-social-link">Instagram</a>
        <a href="https://www.facebook.com/ejemplo2" target="_blank" class="astro-social-link">Facebook</a>
        <a href="https://www.linkedin.com/in/ejemplo2" target="_blank" class="astro-social-link">LinkedIn</a>
      </div>
    </div>
  </div>
</section>


<style>
  .astro-team {
    display: flex;
    justify-content: space-around;
    gap: 20px;
  }
  
  .astro-member {
    text-align: center;
    width: 40%;
  }
  
  .astro-photo-img {
    border-radius: 50%;
    width: 150px;
    height: 150px;
    object-fit: cover;
  }
  
  .astro-socials {
    display: flex;
    justify-content: center;
    gap: 10px;
    margin-top: 10px;
  }
  
  .astro-social-link {
    text-decoration: none;
    color: #333;
    font-size: 14px;
    transition: color 0.3s;
  }
  
  .astro-social-link:hover {
    color: #0073e6;
  }
</style>
